# ~/.config/aliases

### ALIASES ###

# Common Use

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'
alias big="expac -H M '%m\t%n' | sort -h | nl"    # Sort installed packages according to size in MB (expac must be installed)
alias curl="curl --user-agent 'noleak'"
alias dir='dir --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias fixpacman="sudo rm /var/lib/pacman/db.lck"
alias gitpkg='pacman -Q | grep -i "\-git" | wc -l'    # List amount of -git packages
alias grep='grep --color=auto'
alias grubup="sudo update-grub"
alias hw='hwinfo --short'    # Hardware Information
alias psmem='ps auxf | sort -nr -k 4'
alias psmem10='ps auxf | sort -nr -k 4 | head -10'
alias rmpkg="sudo pacman -Rdd"
alias shred="shred -zf"
alias tarnow='tar -acf '
alias untar='tar -zxvf '
alias wget="wget -c --user-agent 'noleak'"

# Get Fastest Mirrors
alias mirror="sudo reflector -f 30 -l 30 --number 10 --verbose --save /etc/pacman.d/mirrorlist"
alias mirrord="sudo reflector --latest 50 --number 20 --sort delay --save /etc/pacman.d/mirrorlist"
alias mirrors="sudo reflector --latest 50 --number 20 --sort score --save /etc/pacman.d/mirrorlist"
alias mirrora="sudo reflector --latest 50 --number 20 --sort age --save /etc/pacman.d/mirrorlist"

# Help People New To Arch
alias apt-get='man pacman'
alias apt='man pacman'
alias helpme='cht.sh --shell'
alias pacdiff='sudo -H DIFFPROG=meld pacdiff'
alias please='sudo'
alias upd="/usr/bin/update"

# Cleanup Orphaned Packages
alias cleanup='sudo pacman -Rns (pacman -Qtdq)'

# termbin
alias tb="nc termbin.com 9999"

# Get The Error Messages From journalctl
alias jctl="journalctl -p 3 -xb"

# Recent installed packages
alias rip="expac --timefmt='%Y-%m-%d %T' '%l\t%n %v' | sort | tail -200 | nl"

# Aliases For dotfiles Bare Git Repository
alias config="/usr/bin/git --git-dir=/.git --work-tree=/"
alias dotfiles="/usr/bin/git --git-dir=$HOME/.git/ --work-tree=$HOME"
alias sysupdate='sudo pacman -Syu --noconfirm; yay -Sau --noconfirm; sudo snap refresh; sudo pacman -Qqm > ~/Documents/PKGLIST/Foreign.txt; sudo pacman -Qqn > ~/Documents/PKGLIST/Native.txt; sudo pacman -Qqdt > ~/Documents/PKGLIST/Orphans.txt; sudo snap list > ~/Documents/PKGLIST/Snaps.txt'
#alias packupdate='dotfiles add -u && dotfiles commit -S -am "Updated package lists, run commands, and other configuration files." && dotfiles push'
#alias dotsync='dotfiles fetch --all && dotfiles reset --hard origin/master'

# root privileges
alias doas="doas --"

# navigation
up () {
  local d=""
  local limit="$1"

  # Default to limit of 1
  if [ -z "$limit" ] || [ "$limit" -le 0 ]; then
    limit=1
  fi

  for ((i=1;i<=limit;i++)); do
    d="../$d"
  done

  # perform cd. Show error if cd fails
  if ! cd "$d"; then
    echo "Couldn't go up $limit dirs.";
  fi
}

